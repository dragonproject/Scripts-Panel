// ============================================================================================// ファイル配置関数：Gihyo.layoutText// パラメータ一覧//　　filePath：ファイルパス。undefinedの場合はファイル選択ダイアログを表示//　　size : テキストフレームのサイズ。配列形式。指定がない場合は["0cm","0cm","297mm","210mm"]//　　pageNo：ページ番号。指定がない場合は1ページ目にする// ============================================================================================var Gihyo = new Object();	// Gihyoオブジェクトを作成Gihyo.layoutTextFile = function (filePath, size, pageNo){	if (pageNo == undefined)	// ページ番号が指定されなかった場合	{		pageNo = 0;	// 1ページ目に配置するようにする	}	if (size == undefined)	{		size = ["0cm","0cm","297mm","210mm"];	// サイズが指定されなかった場合はA4サイズと仮定する	}	if (filePath == undefined)	{		var fileObj = File.openDialog("テキストファイルを選択してください");		if (fileObj == null)		{			return false;	// ファイルが選択されなかったので以後の処理をしない		}	}else{		var fileObj = new File(filePath);	// 関数に渡されたパスをパラメータとして指定	}	var flag = fileObj.open("r");	if (flag == true)	// ファイルが正しく開けた場合のみ処理する	{		var docObj = app.activeDocument;		var tfObj = docObj.pages[pageNo].textFrames.add();	// テキストフレームを追加		tfObj.visibleBounds = size;	// 関数に渡されたサイズでテキストフレームを作成		tfObj.contents = fileObj.read();		fileObj.close();		return true;	}else{		return false;	}}